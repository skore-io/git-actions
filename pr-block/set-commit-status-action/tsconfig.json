{
  "compilerOptions": {
      "target": "es2019",
      "module": "CommonJS",
      "noEmitOnError": true,
      "outDir": "./lib",
      "sourceMap": false,
      "declaration": false,
      "removeComments": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": false,
      "noFallthroughCasesInSwitch": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "typeRoots": [
          "./node_modules/@types/"
      ]
  },
  "compileOnSave": true,
  "include": ["src/**.ts", "tests/**.ts"]
}
